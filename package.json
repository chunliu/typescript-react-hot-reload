{
  "name": "hotloader",
  "version": "1.4.0",
  "description": "A simple template for creating react app using TypeScript with hot reload.",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --exclude 'src/tests/*.{ts,tsx}'",
    "start": "webpack-dev-server",
    "test": "jest",
    "build": "tsc && webpack --progress",
    "clean": "rd /s/q built",
    "prepare": "tsc && webpack --progress --config webpack.prod.config.js"
  },
  "author": "Chun Liu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chunliu/typescript-react-hot-reload"
  },
  "dependencies": {
    "antd": "3.10.5",
    "react": "16.6.1",
    "react-dom": "16.6.1",
    "react-redux": "5.1.1",
    "react-router": "4.3.1",
    "react-router-config": "4.4.0-beta.6",
    "react-router-dom": "4.3.1",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.5",
    "@types/react": "16.7.2",
    "@types/react-dom": "16.0.9",
    "@types/react-redux": "6.0.9",
    "@types/react-router": "4.4.1",
    "@types/react-router-config": "1.0.9",
    "@types/react-router-dom": "4.3.1",
    "css-loader": "^1.0.1",
    "enzyme": "^3.3.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "react-test-renderer": "16.6.1",
    "redux-devtools-extension": "2.13.5",
    "source-map-loader": "^0.2.4",
    "ts-import-plugin": "^1.5.2",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "tslint": "^5.10.0",
    "tslint-loader": "^3.5.4",
    "typescript": "3.1.6",
    "url-loader": "^1.1.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
